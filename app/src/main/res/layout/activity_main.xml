<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@color/teal_200"
        android:text="@string/button"
        android:textColor="@color/white"
        android:id="@+id/parentBtn" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_alignStart="@id/parentBtn"
        android:layout_above="@id/parentBtn" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toEndOf="@id/parentBtn"
        android:layout_alignTop="@id/parentBtn" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_alignEnd="@id/parentBtn"
        android:layout_below="@id/parentBtn" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toStartOf="@id/parentBtn"
        android:layout_alignBottom="@id/parentBtn" />

</RelativeLayout>